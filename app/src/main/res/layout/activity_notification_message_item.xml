<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_pay"/>

        <TextView
            android:id="@+id/tv_notification_msg_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/color_default_gray_font"
            android:paddingLeft="10dp"
            android:text="竞拍返回的拍币已到账"/>

        <TextView
            android:id="@+id/tv_notification_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_default_gray_font"
            android:text="10:02"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_notification_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="30拍币已到账"/>

    <TextView
        android:id="@+id/tv_notification_msg_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看详情"
        android:drawableRight="@drawable/ic_nav_right"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:textColor="@color/color_default_gray_font"/>

</LinearLayout>