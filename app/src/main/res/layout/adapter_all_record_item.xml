<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all_record_shop_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="apple iphonex (a111234234523)"
            android:singleLine="true"
            android:textSize="17sp"
            android:ellipsize="end"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_all_record__pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-30"
            android:paddingTop="5dp"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@color/color_category_title_default"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_all_record_type"
        android:layout_width="wrap_content"
        android:text="[竞拍商品]"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_all_record_time"
        android:text="2018-05-27 11:30"
        android:layout_width="wrap_content"
        android:textColor="@color/color_default_gray_font"
        android:layout_height="0dp"
        android:paddingTop="5dp"
        android:layout_weight="1"/>

</LinearLayout>