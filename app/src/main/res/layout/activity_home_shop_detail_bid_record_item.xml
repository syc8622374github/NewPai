<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_bid_record_avator"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avator_default"/>

    <TextView
        android:id="@+id/tv_bid_record_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="大飞哥"/>

    <TextView
        android:id="@+id/tv_bid_record_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="出局"/>

    <TextView
        android:id="@+id/tv_bid_record_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="江西 南昌"/>

    <TextView
        android:id="@+id/tv_bid_record_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="￥500"/>

</LinearLayout>